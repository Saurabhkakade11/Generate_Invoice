
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Invoice_Layout</title>

    @*//this is bundling*@
    @Styles.Render("~/Content/css");

    @*<script src="~/Scripts/jquery-3.7.0.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery");


    @Scripts.Render("~/bundles/bootstrap");


    @*icon*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    @*header*@
    <header>
        <div class="px-3 py-2 bg-primary text-white">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
                    </a>

                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                        <li>
                            <a href="#" class="nav-link text-white">
                                <i class="bi bi-house" style="font-size: 24px;"></i>
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="/Customer/Index" class="nav-link text-white">
                                <i class="bi bi-speedometer2" style="font-size: 24px;"></i>
                                Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <i class="bi bi-table" style="font-size: 24px;"></i>
                                Orders
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <i class="bi bi-grid" style="font-size: 24px;"></i>
                                Products
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <i class="bi bi-people-circle" style="font-size: 24px;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>





    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                @*sidenav*@
                <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px; ">
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                        <span class="fs-4">Inventory System</span>
                    </a>
                    <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li>
                            @*lable action/view Controller  new {area=""} *@
                            @Html.ActionLink("CUSTOMER", "Index", "Customer", null, new { @class = "nav-item nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("PRODUCT", "Index", "Product", null, new { @class = "nav-item nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("INVOICE", "GenerateInvoice", "Invoice", null, new { @class = "nav-item nav-link" })
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
            <div class="col-md-9">
                @*Body*@
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="py-3 my-4 bg-light">
        <div class="container">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
                <li class="nav-item"><a href="/Product/Index" class="nav-link px-2 text-muted">Pricing</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
            </ul>
            <p class="text-center text-muted">&copy; 2024 Company, Inc</p>
        </div>
    </footer>
    </div>
</body>
</html>
